<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Jadwal Ujian - Sistem Ujian Sekolah</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/css/adminlte.min.css">
</head>

<body class="hold-transition sidebar-mini">
  <div class="wrapper">

    <%- include('partials/navigation') %>

    <div class="content-wrapper">
      <section class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1>Jadwal Ujian</h1>
            </div>
          </div>
        </div>
      </section>

      <section class="content">
        <div class="container-fluid">
          <!-- Filter Section -->
          <div class="row mb-3">
            <div class="col-12">
              <div class="card">
                <div class="card-header">
                  <h3 class="card-title">Filter Jadwal Ujian</h3>
                </div>
                <div class="card-body">
                  <form action="/siswa/jadwal-ujian" method="GET" class="form-inline">
                    <div class="form-group mr-3">
                      <label for="mapel" class="mr-2">Mata Pelajaran:</label>
                      <select name="mapel" id="mapel" class="form-control">
                        <option value="">Semua Mata Pelajaran</option>
                        <% mapelList.forEach(function(mapel) { %>
                          <option value="<%= mapel.id_mapel %>" <%= currentMapel == mapel.id_mapel ? 'selected' : '' %>>
                            <%= mapel.nama_mapel %>
                          </option>
                        <% }); %>
                      </select>
                    </div>
                    <div class="form-group mr-3">
                      <label for="kelas" class="mr-2">Kelas:</label>
                      <select name="kelas" id="kelas" class="form-control">
                        <option value="">Semua Kelas</option>
                        <% kelasList.forEach(function(kelas) { %>
                          <option value="<%= kelas.kelas %>" <%= currentKelas == kelas.kelas ? 'selected' : '' %>>
                            <%= kelas.kelas %>
                          </option>
                        <% }); %>
                      </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Filter</button>
                    <a href="/siswa/jadwal-ujian" class="btn btn-secondary ml-2">Reset</a>
                  </form>
                </div>
              </div>
            </div>
          </div>
          
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-header">
                  <h3 class="card-title">Daftar Jadwal Ujian</h3>
                </div>
                <div class="card-body table-responsive p-0">
                  <table class="table table-hover text-nowrap">
                    <thead>
                      <tr>
                        <th>Judul Ujian</th>
                        <th>Mata Pelajaran</th>
                        <th>Kelas</th>
                        <th>Waktu Mulai</th>
                        <th>Waktu Selesai</th>
                        <th>Aksi</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% jadwalUjian.forEach(function(ujian) { %>
                        <tr>
                          <td><%= ujian.judul_ujian %></td>
                          <td><%= ujian.nama_mapel %></td>
                          <td><%= ujian.kelas %> <%= ujian.minor_kelas %></td>
                          <td><%= new Date(ujian.waktu_mulai).toLocaleString() %></td>
                          <td><%= new Date(ujian.waktu_selesai).toLocaleString() %></td>
                          <td>
                            <% 
                              const now = new Date();
                              const mulai = new Date(ujian.waktu_mulai);
                              const selesai = new Date(ujian.waktu_selesai);
                              if (now >= mulai && now <= selesai) {
                            %>
                              <a href="/siswa/ujian/<%= ujian.id_ujian %>" class="btn btn-primary">Mulai Ujian</a>
                            <% } else if (now < mulai) { %>
                              <span class="badge badge-info">Belum dimulai</span>
                            <% } else { %>
                              <span class="badge badge-secondary">Selesai</span>
                            <% } %>
                          </td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

    <footer class="main-footer">
      <div class="float-right d-none d-sm-inline">
        Sistem Ujian Sekolah
      </div>
    </footer>
  </div>

  <!-- jQuery -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <!-- Bootstrap 4 -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.0/js/bootstrap.bundle.min.js"></script>
  <!-- AdminLTE App -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/js/adminlte.min.js"></script>
</body>

</html>
