<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Tambah Ujian - Sistem Ujian Sekolah</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">

  <%- include('partials/navigation') %>

  <div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tambah Ujian</h1>
          </div>
        </div>
      </div>
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Form Tambah Ujian</h3>
              </div>
              <div class="card-body">
                <form action="/guru/ujian/add" method="POST">
                  <div class="form-group">
                    <label for="id_kelas">Kelas dan Mata Pelajaran</label>
                    <select class="form-control" id="id_kelas" name="id_kelas" required>
                      <option value="">Pilih Kelas dan Mata Pelajaran</option>
                      <% if (kelasList && kelasList.length > 0) { %>
                        <% kelasList.forEach(function(k) { %>
                          <option value="<%= k.id_kelas %>|<%= k.id_mapel %>"><%= k.kelas %> <%= k.minor_kelas %> - <%= k.nama_mapel %></option>
                        <% }); %>
                      <% } else { %>
                        <option value="" disabled>Tidak ada kelas atau mata pelajaran tersedia</option>
                      <% } %>
                    </select>
                  </div>
                  <div class="form-group">
                    <label for="judul_ujian">Judul Ujian</label>
                    <input type="text" class="form-control" id="judul_ujian" name="judul_ujian" required>
                  </div>
                  <div class="form-group">
                    <label for="waktu_mulai">Waktu Mulai</label>
                    <input type="datetime-local" class="form-control" id="waktu_mulai" name="waktu_mulai" required>
                  </div>
                  <div class="form-group">
                    <label for="waktu_selesai">Waktu Selesai</label>
                    <input type="datetime-local" class="form-control" id="waktu_selesai" name="waktu_selesai" required>
                  </div>
                  <button type="submit" class="btn btn-primary">Tambah Ujian</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <footer class="main-footer">
    <div class="float-right d-none d-sm-inline">
      Sistem Ujian Sekolah
    </div>
  </footer>
</div>

<!-- jQuery -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<!-- Bootstrap 4 -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.0/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.1.0/js/adminlte.min.js"></script>
</body>
</html>
